<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game_character_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameCharacterChoice">


    <ImageView
        android:id="@+id/lassalle_img"
        android:layout_width="115dp"
        android:layout_height="157dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/lasalle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lepen_img"
        app:srcCompat="@drawable/lasalle" />

    <ImageView
        android:id="@+id/pecress_img"
        android:layout_width="115dp"
        android:layout_height="157dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/pecresse"
        app:layout_constraintEnd_toStartOf="@+id/lepen_img"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lassalle_img"
        app:srcCompat="@drawable/pecresse" />

    <ImageView
        android:id="@+id/hidalgo_img"
        android:layout_width="115dp"
        android:layout_height="157dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/hidalgo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/lepen_img"
        app:layout_constraintTop_toTopOf="@+id/lassalle_img"
        app:srcCompat="@drawable/hidalgo" />

    <ImageView
        android:id="@+id/melenchon_img"
        android:layout_width="115dp"
        android:layout_height="157dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/melenchon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lepen_img"
        app:layout_constraintTop_toTopOf="@+id/lepen_img"
        app:srcCompat="@drawable/melenchon" />

    <ImageView
        android:id="@+id/macron_img"
        android:layout_width="115dp"
        android:layout_height="157dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/macron"
        app:layout_constraintEnd_toStartOf="@+id/lepen_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lepen_img"
        app:srcCompat="@drawable/macron" />

    <ImageView
        android:id="@+id/lepen_img"
        android:layout_width="115dp"
        android:layout_height="157dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/lepen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CharacterChoice_tv"
        app:srcCompat="@drawable/lepen" />

    <TextView
        android:id="@+id/CharacterChoice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="cursive"
        android:text="Choose your politician !"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>